<%- include('../partials/header') %>

  <h1>Skills as of <%=date%></h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Item</th>
        <th>Completed?</th>
      </tr>
    </thead>
    <tbody>
      <% skills.forEach(function(s) { %>
        <tr>
          <td><a href="/skills/<%= s.id %>">
              <%= s.skill %>
            </a></td>
          <td><%= s.learned ? 'learned' : 'not learned' %></td>
          <td>
            <form action="/skills/<%= s.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">X</button>
            </form>
          </td>
          <td>
            <form action="/skills/<%= s.id %>?_method=UPDATE" method="PUT">
            <button type="submit" class="btn btn-danger">Edit</button>
            </form>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>
  <%- include('../partials/footer') %>

